@*Define model*@
@model IEnumerable<Actor>
@{
    // this is  text title
    ViewData["Title"] = "List of Actors";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="width:150px;height:150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(medelitem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(medelitem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-around">
                                <a class="btn btn-outline-primary" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position:fixed; right: 25px; bottom:25px;">
    <a asp-asp-controller="Actors" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i>Add New</a>
</div>